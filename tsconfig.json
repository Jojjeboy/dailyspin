{
    "compilerOptions": {
        "target": "es6",
        "module": "ES6",
        "outDir": "./public",
        "rootDir": "./src",
        "sourceMap": false,
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

    },
    "exclude": [
        "node_modules"
    ],
    "include": ["src"]
}